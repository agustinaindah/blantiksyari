    <RelativeLayout
        android:id="@+id/layItemProduct"
        style="@style/MatchMatchLayout"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgItemNewProduct"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:transitionName="@string/label_produk_terbaru"
            android:src="@drawable/no_image" />

        <TextView
            android:id="@+id/txtItemNewProductTitle"
            style="@style/AppTheme.ItemProduct.Title"
            android:layout_below="@id/imgItemNewProduct"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Merk"
            android:textColor="@android:color/black"/>

        <FrameLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtItemNewProductTitle"
            android:background="@color/flat_clouds" />

        <TextView
            android:id="@+id/txtItemNewProductPrice"
            style="@style/AppTheme.ItemProduct.Title"
            android:layout_below="@id/separator"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Rp 400.000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNewProduct"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:background="@color/newProduct"
                android:text="New"
                android:textSize="10sp"
                android:padding="6dp" />

